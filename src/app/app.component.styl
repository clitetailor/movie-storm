@import '../styles.styl';

.outer-wrapper {
  width: 100%;
  min-height: 100%;

  background: #111111;

  padding-top: $(50px);

  & >>> app-home-page >>> app-navbar {
    display: flex;
    width: 100%;
    height: $(50px);

    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    z-index: 2;
  }

  & >>> app-home-page {
    display: block;

    height: 100%;
    width: 100%;
  }

  & >>> app-login-page {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;

    display: block;

    height: 100%;
    width: 100%;
  }

  overflow: auto;
}
