.wrapper {
  display: flex;
  flex-flow: column nowrap;

  align-items: center;
  justify-content: center;

  position: absolute;
  top: 0px;
  width: 100%;
  height: 100%;

  min-height: 800px;

  overflow: hidden;

  background: url(../../assets/storm.jpg);
  background-size: cover;

  h1, h6, button {
    color: white;
    animation-name: fadeIn;
    animation-duration: 0.8s;
    animation-fill-mode: backwards;
  }

  @keyframes fadeIn {
    0% {
      transform: translate(0px, 20px);
      opacity: 0;
    }

    100% {
      transform: translate(0px, 0px);
      opacity: 1;
    }
  }

  h1 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 45px;

    text-transform: uppercase;
    animation-delay: 0s;
  }

  h6 {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 24px;
    font-weight: lighter;

    animation-delay: 0.5s;
  }

  button.start {
    font-family: Arial, Helvetica, sans-serif;

    padding: 10px 30px;

    background: none;
    border: none;
    outline: none;

    color: white;
    font-size: 16px;
    font-weight: lighter;

    border: 2px solid white;
    border-radius: 21px;
    cursor: pointer;

    animation-delay: 1s;

    &:hover {
      background: white;
      border: 2px solid transparent;
      color: #111111;
    }
  }
}
