@import '../../styles.styl';

.wrapper {
  display: flex;
  justify-content: center;
  align-items: center;

  width: 100%;
  height: 100%;

  padding-top: $(50px);

  .wire-frame {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: space-between;

    width: $(450px);
    height: $(546px);

    padding: 0 $(85px);

    background: white;

    h1 {
      font-family: Arial, Helvetica, sans-serif;
      font-size: $(32px);

      margin-top: $(98px);

      color: #303030;
    }


    app-input-wrapper {
      margin-top: $(90px);
      width: $(280px);

      margin-bottom: $(135px);
    }

    .submit-line {
      display: flex;
      justify-content: center;

      width: 100%;
      margin-bottom: $(102px);

      button {
        display: flex;
        justify-content: center;
        align-items: center;

        border: none;
        outline: none;

        width: $(180px);
        height: $(50px);

        font-family: Arial, Helvetica, sans-serif;
        font-size: $(18.75px);
        color: white;

        background: #f16522;

        cursor: pointer;
      }
    }
  }
}
