.wrapper {
  display: flex;
  justify-content: center;
  align-items: center;

  width: 100%;
  min-height: 100%;

  .wire-frame {
    display: flex;
    flex-flow: column nowrap;

    align-items: stretch;
    width: 640px;
    height: 800px;

    background: white;

    .top-line, .input-line, .submit-line {
      display: flex;
      justify-content: center;
    }

    .top-line {
      padding-top: 135px;

      h1 {
        font-family: Arial, Helvetica, sans-serif;
      }
    }

    .input-line {
      &.first-child {
        margin-top: 90px;
      }

      &.last {
        margin-bottom: 100px;
      }
    }

    .submit-line {
      button {
        display: flex;
        justify-content: center;
        align-items: center;

        border: none;
        outline: none;

        width: 210px;
        height: 60px;

        font-family: Arial, Helvetica, sans-serif;
        font-size: 24px;
        color: white;

        background: #f16522;

        cursor: pointer;
      }
    }
  }
}
