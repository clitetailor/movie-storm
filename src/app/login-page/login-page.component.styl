.wrapper {
  display: flex;
  justify-content: center;
  align-items: center;

  width: 100%;
  min-height: 1vh;

  padding-bottom: $(100px);

  .wire-frame {
    display: flex;
    flex-flow: column nowrap;
    align-items: center;
    justify-content: space-between;

    width: $(450px);
    min-height: $(546px);

    padding: $(98px) $(85px);

    background: white;

    h1 {
      font-family: Arial, Helvetica, sans-serif;
      font-size: $(98px);

      color: #303030;
    }


    app-input-wrapper {
      margin-top: $(90px);
      width: $(280px);

      margin-bottom: 135px;
    }

    .submit-line {
      width: 100%;

      button {
        display: flex;
        justify-content: center;
        align-items: center;

        border: none;
        outline: none;

        width: 210px;
        height: 60px;

        font-family: Arial, Helvetica, sans-serif;
        font-size: 24px;
        color: white;

        background: #f16522;

        cursor: pointer;
      }
    }
  }
}
