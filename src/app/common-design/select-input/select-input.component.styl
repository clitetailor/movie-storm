label {
  font-family: Lato;
  font-size: 12px;

  color: #a0a0a0;
}

select {
  padding-top: 3px;
  padding-bottom: 3px;

  margin-top: 10px;

  width: 100%;
  border: none;
  outline: none;
  box-shadow: none;

  font-family: Lato;
  font-size: 18px;

  cursor: pointer;
}

.bottom-line {
  display: flex;
  justify-content: center;
  align-items: stretch;

  width: 100%;
  height: 3px;

  margin-bottom: 50px;

  background: #aaaaaa;

  .bottom-line-effect {
    width: 0;
    background: #111111;

    transition: ease-in 0s;
  }
}

.input-wrapper.focus .bottom-line-effect {
  width: 100%;
  transition: ease-out 0.2s;
}
