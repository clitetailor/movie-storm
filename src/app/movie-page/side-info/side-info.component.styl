&.wrapper {
  display: flex;
  flex-flow: column nowrap;
  width: 100%;
  height: 100%;

  background: linear-gradient(
      120deg, alpha(white, 0.2),
      alpha(white, 0.1)
    );


  .movie-poster, .rating-line, .desc-line {
    padding-left: 77px;
    padding-right: 77px;
  }

  .movie-poster {
    padding-top: 121px;

    .poster-image {
      height: 461px;
      background: white;
    }
  }

  .rating-line {
    display: flex;
    justify-content: center;

    padding-top: 47px;
    padding-bottom: 45px;

    font-family: Material Icons;
    font-size: 24px;
    color: #ffd200;

    cursor: pointer;
  }

  .desc-line {
    margin-bottom: 10px;

    .title {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 18px;
      font-weight: bold;
      color: white;
    }

    .desc {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 18px;
      color: white;
    }
  }
}
