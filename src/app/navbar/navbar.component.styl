.navbar {
  display: flex;
  width: 100%;
  height: 90px;

  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;

  .app-title {
    display: flex;
    flex: 1 1 auto;
    height: 100%;
    align-items: center;

    padding-left: 36px;

    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    font-size: 32px

    a {
      color: white;

      text-decoration: none;
    }
  }

  .account {
    display: flex;
    padding-right: 76px;

    align-items: center;

    font-family: Lato Light;
    font-size: 22px;

    color: white;
    text-decoration: none;

    a {
      color: white !important;
      text-decoration: none;
      cursor: pointer;
    }
  }
}
