@import '../../styles.styl';

.navbar {
  display: flex;
  width: 100%;
  height: $(50px);

  position: absolute;
  top: 0;
  left: 0;
  right: 0;

  z-index: 2;

  .app-title {
    display: flex;
    flex: 1 1 auto;
    height: 100%;
    align-items: center;

    padding-left: $(22px);

    font-family: Arial, Helvetica, sans-serif;
    font-weight: bold;
    font-size: $(24px);

    a {
      color: white;

      text-decoration: none;
    }
  }

  .account {
    display: flex;
    padding-right: $(22px);

    align-items: center;

    font-family: Lato Light;
    font-size: $(16px);

    color: white;
    text-decoration: none;

    a {
      color: white !important;
      text-decoration: none;
      cursor: pointer;
    }
  }
}
