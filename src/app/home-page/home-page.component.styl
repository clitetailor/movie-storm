@import '../../styles.styl';

.wrapper {
  position: absolute;

  top: 0;
  right: 0;
  left: 0;
  bottom: 0;

  padding-top: 50px;

  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: flex-start;

  overflow: hidden;

  z-index: 1;

  .search {
    display: flex;
    align-items: stretch;
    height: $(40px);
    width: $(1000px);

    margin-top: $(54px);
    margin-bottom: 12px;

    background: white;

    transition: margin-bottom 0.5s;

    &.focus {
      margin-bottom: 160px;
    }

    .search-input {
      display: flex;
      align-items: center;
      flex: 1 1 auto;

      padding: 0 $(32px);

      border: none;
      outline: none;

      box-shadow: none;

      font-family: Lato;
      font-size: $(18.75px);
    }

    .submit {
      display: flex;
      align-items: center;

      padding: 0 $(32px);

      font-family: Material Icons;
      font-size: $(20px);
      color: #303030;

      cursor: pointer;
    }
  }

  .movies {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
    align-content: space-between;

    margin-top: $(54px);
    width: $(1000px);

    .movie {
      position: relative;

      margin: $(4.5px);

      width: $(323px);
      height: $(206px);

      cursor: pointer;

      .movie-content {
        width: 100%;
        height: 100%;

        padding-right: $(206px);
      }

      @keyframes drop-in {
        0% {
          transform: translateY($(-100px));
          height: 0%;
          opacity: 0;
        }

        10% {
          opacity: 0.6;
        }

        100% {
          transform: translateY(0);
          height: 100%;
          opacity: 1;
        }
      }

      @keyframes drop-in-image {
        0% {
          transform: translate($(-180px), 0);
          opacity: 0;
        }

        10% {
          opacity: 0.8;
        }

        100% {
          transform: translate(0, 0);
          opacity: 1;
        }
      }

      for i in 1 2 3 4 5 6 {
        &:nth-child({i}) .background {
          position: absolute;

          display: flex;
          flex-flow: row nowrap;
          content: "";

          background: white;

          height: 100%;
          width: 100%;

          animation-name: drop-in;
          animation-duration: 1s;
          animation-fill-mode: backwards;
          animation-iteration-count: 1;
          animation-delay: i * 0.2s;
        }

        $width = $(136px);
        $height = $(206px);
        $scale-width = $width * 1.3;
        $scale-height = $height * 1.3;
        $padding-top = (-($scale-height - $height) / 2);
        $padding-left = (-($scale-width - $width) / 2);

        &:nth-child({i}) .image-wrapper {
          position: absolute;
          top: 0;
          left: 0;

          width: $width;
          height: $height;

          background: black;

          animation-name: drop-in-image;
          animation-duration: 1s;
          animation-fill-mode: backwards;
          animation-iteration-count: 0.8s;
          animation-delay: i * 0.2s + 2.2s;

          transition-duration: 0.6s;

          z-index: 5;

          overflow: hidden;

          img {
            position: absolute;
            top: $padding-top;
            left: $padding-left;

            width: $scale-width;
            height: $scale-height;

            background-image:white;

            object-fit: cover;

            transition-duration: 0.6s;
          }
        }

        &:hover {
          .image-wrapper {
            top: $padding-top;
            left: $padding-left;
            width: $scale-width;
            height: $scale-height;

            img {
              top: 0;
              left: 0;
            }
          }
        }
      }
    }
  }
}
